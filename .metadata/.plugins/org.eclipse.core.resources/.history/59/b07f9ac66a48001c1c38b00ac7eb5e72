
public class P17 {

	public static void main(String[] args) {
		Car car1;
		car1 new Car();
		int number = car1.getNum();
		double gasonline = car1.getGas();
		System.out.println("請查樣品車時得知" );
		System.out.println("車號是" +number +"，汽油量是"+ gasonline);
	}

}
class Car{
	int num;
	double gas;
	int getNum() {
		System.out.println("調查車號" );
		return num;
	}
	double getGas() {
		System.out.println("請查汽油量" );
		return gas;
	}
	void setNumGas(int n,double g) {
		num=n;
		gas=g;
		System.out.println("將車牌設為"+ num + "汽油量設為"+ gas);
		
	}
}